/* pages/table/all.wxss */
.table {
  width: 100%;
  height: 200%;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th {
  font-size: 30rpx;
  color: #43b0d1;
  padding: 10rpx 0;
  border-bottom: 1px #d1e1fb solid;
  text-align: center;
  width: 100%;
}

.td {
  font-size: 24rpx;
  padding: 10rpx 5rpx;
  width: 100%;
  border-bottom: 1px #d1e1fb solid;
  border-right: 1px #d1e1fb solid;
  text-align: center;
}

.idx {
  font-size: 30rpx;
  color: #43b0d1;
  width: 20rpx;
  padding: 10rpx;
}

.weui-bold {
  font-size: 20rpx;
  font-weight: bold;
}

text + .weui-bold {
  display: block;
  padding-top: 20rpx;
}
